{
  "rewrites": [
    {
      "source": "/auth/magic-link",
      "destination": "/auth/magic-link"
    },
    {
      "source": "/recipe/:path*",
      "destination": "/recipe/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
